@model occupy.Models.IndexViewModel
	<!--================Home Banner Area =================-->
	<section class="home_banner_area">
		<div class="swiper-container">

			
			<div class="swiper-wrapper">
				@if (Model.Slides! != null)
				{
					foreach (var item in Model.Slides!)
{
	<div class="swiper-slide"><img src="~/uploads/files/icon/@item.Image" alt="">
					<div class="slider_text_inner">
						<div class="container">
							<div class="row">
								<div class="col-lg-7">
									<div class="slider_text">
										<h2>@item.Title</h2>
										<p>@item.Subtitle</p>
										<a class="banner_btn" href="@item.Url" target="@item.UrlTarget">@item.UrlText</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
}
				}


			</div>

		</div>
	</section>
	<!--================End Home Banner Area =================-->